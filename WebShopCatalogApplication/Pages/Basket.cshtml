@page
@model WebShopCatalogApplication.Pages.BasketModel
@{
}

<h1>Корзина</h1>
@if(Model.Items == null)
{
    <div>Что-то пошло не так</div>
}
else if (!Model.Items.Any())
{
    <div>Пусто</div>
}
else
{
    <table>
        <tr>
            <th>Название</th>
            <th>Цена за шт.</th>
            <th>Кол-во</th>
            <th>Сумма</th>
            <th></th>
        </tr>
    @foreach(var item in Model.Items)
    {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Count</td>
                <td>@item.TotalPrice</td>
                <td><a asp-page="Basket" asp-page-handler="DeleteItem" asp-route-itemId="@item.Id">Удалить</a></td>
            </tr>
    }
    </table>
    <p>Общая сумма: @Model.TotalPrice</p>
}